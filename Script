-- Create the ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "HitboxExpanderGui"
gui.Parent = game.Players.LocalPlayer.PlayerGui

-- Create the main frame with improved visibility
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 220, 0, 220) -- Adjusted size for better visibility
mainFrame.Position = UDim2.new(0.5, -110, 0.5, -140) -- Adjusted position for vertical centering
mainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50) -- Darker background
mainFrame.BackgroundTransparency = 0.2 -- Slight transparency
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = gui

-- Add rounded corners to the main frame
local UICornerMain = Instance.new("UICorner")
UICornerMain.CornerRadius = UDim.new(0, 25)
UICornerMain.Parent = mainFrame

-- Create title label with a more visible design
local titleLabel = Instance.new("TextLabel")
titleLabel.Name = "TitleLabel"
titleLabel.Size = UDim2.new(1, 0, 0, 30)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundTransparency = 1 -- Transparent background
titleLabel.BorderSizePixel = 0
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.Text = "Hitbox Expander GUI"
titleLabel.Font = Enum.Font.SourceSans
titleLabel.TextSize = 18
titleLabel.Parent = mainFrame

-- Create the X button with a clean, visible design
local closeButton = Instance.new("TextButton")
closeButton.Name = "CloseButton"
closeButton.Size = UDim2.new(0, 20, 0, 20)
closeButton.Position = UDim2.new(1, -20, 0, 0)
closeButton.BackgroundTransparency = 1 -- Transparent background
closeButton.BorderSizePixel = 0
closeButton.TextColor3 = Color3.fromRGB(255, 50, 50)
closeButton.Text = "X"
closeButton.Font = Enum.Font.SourceSans
closeButton.TextSize = 14
closeButton.Parent = titleLabel

-- Define the script URLs and names
local hitboxNames = {"Hitbox Expander 1", "Hitbox Expander 2", "Hitbox Expander 3", "Hitbox Expander 4"}
local scripts = {
    [1] = "loadstring(game:HttpGet('https://raw.githubusercontent.com/shakar60/hit/main/box',true))()",
    [2] = "loadstring(game:HttpGet('https://raw.githubusercontent.com/Vcsk/RobloxScripts/main/HitboxExpander.lua'))()",
    [3] = "loadstring(game:HttpGet('https://pastebin.com/raw/JgtddWA3'))()",
    [4] = "loadstring(game:HttpGet('https://raw.githubusercontent.com/louismich4el/ItsLouisPlayz-Scripts/main/Hitbox%20Expander.lua'))()"
}

-- Create a frame to hold the buttons
local buttonFrame = Instance.new("Frame")
buttonFrame.Name = "ButtonFrame"
buttonFrame.Size = UDim2.new(1, -10, 1, -35) -- Adjusted size to fit within mainFrame
buttonFrame.Position = UDim2.new(0, 5, 0, 35)
buttonFrame.BackgroundTransparency = 1 -- Transparent background
buttonFrame.Parent = mainFrame

-- Add rounded corners to the button frame
local UICornerButtonFrame = Instance.new("UICorner")
UICornerButtonFrame.CornerRadius = UDim.new(0, 20)
UICornerButtonFrame.Parent = buttonFrame

-- Create buttons for each script
local yOffset = 5 -- Initial vertical offset
for i, hitboxName in ipairs(hitboxNames) do
    local button = Instance.new("TextButton")
    button.Name = "ScriptButton_"..i
    button.Size = UDim2.new(1, -10, 0, 40) -- Adjusted button size
    button.Position = UDim2.new(0, 5, 0, yOffset)
    button.BackgroundColor3 = Color3.fromRGB(70, 70, 70) -- Slightly lighter button background
    button.BackgroundTransparency = 0.3 -- Less transparent for better visibility
    button.BorderSizePixel = 0
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Text = hitboxName
    button.Font = Enum.Font.SourceSans
    button.TextSize = 14
    button.Parent = buttonFrame

    button.MouseButton1Click:Connect(function()
        loadstring(scripts[i])()
    end)

    yOffset = yOffset + 45 -- Increased spacing for clarity
end

-- Create the X button click event to close the GUI
closeButton.MouseButton1Click:Connect(function()
    -- Add code to remove hitbox expander here (if necessary)

    -- Destroy GUI
    gui:Destroy()
end)
